@inherits ModelAwareComponentBase<ActivityBarState>

<nav class="activity-bar">
    <CascadingValue TValue="ActivityBar" Value="this">
        @ChildContent
    </CascadingValue>
    
    <div class="footer">
        <div class="activity-button">
            <span class="fi fi-rr-circle-user" />
        </div>
        <div class="activity-button">
            <span class="fi fi-rr-settings"></span>
        </div>
    </div>
</nav>

@if (Model.ActiveActivity is {} activity) {
    <div class="activity-content resizable">
        @activity.ChildContent
        
        <div class="splitter" />
    </div>
}

@code {

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = null!;

}
